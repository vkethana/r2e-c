FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /INSTALL_C

RUN apt-get update \
    && apt-get install -y \
       build-essential \
       cmake \
       scons \
       ninja-build \
       autoconf \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

RUN apt-get update \ 
   && apt-get install gradle -y

COPY repos /INSTALL_C/repos
